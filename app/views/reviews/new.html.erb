

<div class ="contens-toukou1">
  <div class="contens-toukou2">
       <span class ="contens-toukou3">
       <h1><%= @drone.name =%>　投稿フォーム</h1>
       </span>
  </div>
</div>

<div class="main-gazo">
<img src="/assets/drone/<%= @drone.image %>" class="top-gazo">
</div>

<!-- 投稿機能 -->
 <div  class="komento-box">
         <%= form_for [@drone, @review] do |f| %>
          <div class="komento-folder">
            <%= f.label :名前 %>
            <%= f.text_field :nickname, placeholder: '名前を入力してください。', value: '', class: "komento-nickname" %>
          </div>

          <!-- <div class="komento-folder">
            <%= f.label :評価, style: { 'margin-right' => 8 } %>
            <%= f.number_field :rate, placeholder: '評価', step: 1, max: 10, min: 1, html: { class: "search__query", style: 'text-align: right;' } , class: "komento-rate" %>
          </div> -->

          <div class="komento-folder">
            <%= f.label :評価, style: { 'margin-right' => 8 } %>
            <span class="review1111">
         <%= f.select :rate, １: '1', ２: "2" , ３: '3', ４: "4" , ５: '5', ６: "6" , ７: '7', ８: "8" , ９: '9', １０: "10"  %>
          </span>
          </div>

          <div class="komento-folder">
          <%= f.label :性別, style: { 'margin-right' => 8 } %>
          <span class="review1111">
          <%= f.select :Position, 男性: '男性', 女性: "女性" %>
          </span>
          </div>


           <div class="komento-folder">
          <%= f.label :立場, style: { 'margin-right' => 8 } %>
          <span class="review1111">
          <%= f.select :Position, 在校生: '在校生', 卒業生: "卒業生" , 学校説明会参加: '学校説明会参加' %>
          </span>
          </div>

          <div class="komento-folder">
          <%= f.label :学校の良いところ, style: { 'margin-right' => 8 } %>
          <%= f.text_area :good, placeholder: 'コメントは最低２０文字以上入力をお願いします。', class: "komento-good" %>
          </div>

          <div class="komento-folder">
          <%= f.label :改善して欲しい・気になったところ, style: { 'margin-right' => 8 } %>
          <%= f.text_area :bad, placeholder: 'コメントは最低２０文字以上入力をお願いします。', class: "komento-good" %>
          </div>

          <div class="row">
            <div class="col10 push1">
            <%= button_tag type: "submit", class: "btn btn--block" do %>
              投稿する<i class="icon-arrow-right"></i>
              <% end %>
            </div>
          </div>
           <% end %>
<div class="modoru-link">
<a href="/schools/<%= @drone.id %>">
<<学校の詳細ページに戻る>></a>
</div>
</div>
